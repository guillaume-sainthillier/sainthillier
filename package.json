{
    "title": "Guillaume Sainthillier",
    "browserslist": [
        "last 2 versions"
    ],
    "name": "sainthillier",
    "version": "1.2.0",
    "private": true,
    "description": "https://sainthillier.fr",
    "homepage": "https://sainthillier.fr",
    "license": "MIT",
    "author": "Guillaume Sainthillier",
    "contributors": [
        "David Miller (http://davidmiller.io/)"
    ],
    "scripts": {
        "dev": "encore dev",
        "watch": "encore dev --watch",
        "build": "encore production",
        "build:hugo": "yarn run build && yarn run hugo",
        "build:hugo:preview": "yarn run build && yarn run hugo -D -F",
        "hugo": "hugo --gc --minify"
    },
    "dependencies": {
        "bootstrap": "4.5.0",
        "jqcloud2": "2.*",
        "jquery": "3.5.1",
        "jquery.easing": "1.*",
        "lazysizes": "^5.2.2",
        "popper.js": "1.*"
    },
    "devDependencies": {
        "@symfony/webpack-encore": "^0.30.2",
        "core-js": "^3.0.0",
        "filemanager-webpack-plugin": "^2.0.5",
        "glob-all": "^3.2.1",
        "hugo-bin": "^0.60.0",
        "husky": ">=4",
        "imagemin-jpegtran": "^7.0.0",
        "imagemin-optipng": "^8.0.0",
        "imagemin-webpack": "^5.1.1",
        "lint-staged": ">=10.2.9",
        "node-sass": "^4.14.1",
        "prettier": "^2.0.5",
        "purgecss-webpack-plugin": "^2.2.0",
        "regenerator-runtime": "^0.13.2",
        "sass-loader": "^8.0.0",
        "webpack-notifier": "^1.6.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,scss,md}": "prettier --write",
        "*.php": [
            "php-cs-fixer fix --config=.php_cs.dist"
        ]
    }
}
