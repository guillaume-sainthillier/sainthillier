{% extends "GuyAdminBundle::layout.html.twig" %}

{% set competence = item %}
{% form_theme form 'GuyAdminBundle:Form:fields.html.twig' %}
{% block guy_admin_titre %}Compétences{% endblock %}

{% block guy_admin_content_title %}
    Compétence / {% block guy_admin_titre_competence %}{% endblock %}
{% endblock %}

{% block guy_admin_content %}
    <form method="post" {{ form_enctype(form) }}>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {{ form_row(form.nom) }}
                {{ form_row(form.niveau) }}
                
                <br />
                {% block boutton %}{% endblock %}
                <a href="{{ path('guy_admin_list') }}" >Retour</a>
                {{ form_rest(form) }}
            </div>
        </div>        
    </form>
{% endblock %}
