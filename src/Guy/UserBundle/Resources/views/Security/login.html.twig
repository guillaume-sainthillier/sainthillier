{% extends "GuyUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Connexion{% endblock %}
{% block css %}
    {% stylesheets 
        'bundles/guyuser/css/style.css'

        filter='cssrewrite,?yui_css'
        output='prod/css/login.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" >
    {% endstylesheets %}
{% endblock %}

{% block fos_user_content %}
<div class="row login">
    <div class="col-lg-4 col-lg-offset-4">
        {% if error %}
            <div class="alert alert-danger">
                <i class="fa fa-warning"></i> {{ error|trans }}
            </div>
        {% endif %}

        <h2>Login</h2>
        <hr />
        <form action="{{ path('fos_user_security_check') }}" method="post" role="form" >
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input class="form-control" type="text" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}"/>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input class="form-control" type="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" />
            </div>
            <div class="form-group text-right">
                <label>                    
                    {{ 'security.login.remember_me'|trans }}
                    <input type="checkbox" name="_remember_me" value="on" />
                </label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <button class="btn btn-primary btn-lg pull-right" type="submit" id="_submit" name="_submit" >{{ 'security.login.submit'|trans }}</button>
        </form>
    </div>
</div>
{% endblock fos_user_content %}


